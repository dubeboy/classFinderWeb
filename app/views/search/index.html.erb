
  <div class="col-md-12 my-search ">
    <div class=" text-center">
    <%= form_tag search_index_path, :method => :get, id: 'items_search', class: 'form-inline form-search'  do %>
          <div class=" form-group">
            <%= select_tag "category", options_from_collection_for_select(@cat, "id", "name") , class: 'btn btn-raised  btn-success'%>
            <%= text_field_tag :search, params[:search], class: ' form-control', style: 'width: 500px'%>
            <%= submit_tag 'Search', name: nil, class: 'btn btn-raised btn-success ' %>
          </div>

    <% end %>
    </div>
  </div>

<div class="">
 <% if @items %>
    <% @items.each do |i| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">

            <h4><%= i.name %></h4>
            <p><span class="label label-info"><%= i.category.name if i.category %></span> </p>
            <!-- <img src="..." class="img-responsive" alt="Responsive image"> -->

            <%= image_tag i.pictures[0].image, class: 'img-responsive' unless i.pictures[0].nil?  %>
            <p><%= i.description %></p>
            <p class="text-success">Price: R <%= i.price.round(2) %></p>
            <div>
              <%# button_to "Create", { action: "create" }, remote: true, form: { "data-type" => "json" } %>
              <%= button_to [:like, i],  remote: true, form: {'data-type' => "json" }  do %>
                  <i class="material-icons">thumb_up</i>
              <% end %>
              <%= link_to 'View Item', item_path(i), class:'pull-right' %>
            </div>

          </div>
        </div>
      </div>
        <% end %>
      <% else %>
      <h2 class="text-bold text-capitalize text-center my-center"><i class="material-icons">search</i> Search For Stuff...</h2>
  <% end %>
</div>

<%= will_paginate @items if @items  %>