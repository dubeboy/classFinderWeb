<!-- Slider -->
<div class="col-xs-12" id="slider">
  <!-- Top part of the slider -->
  <div class="col-sm-8" id="carousel-bounding-box">
    <div class="carousel slide" id="myCarousel">
      <!-- Carousel items -->
      <div class="carousel-inner" style="margin-bottom: 20px">
        <% counter = 0 %>
        <% @ac.pictures.each do |p| %>
            <div class= "<%= image_slider_helper(counter) %>  " data-slide-number= <%= counter %> >
              <%= image_tag p.image, class: 'img-responsive ', style: 'height: 447px; width: 100%; ' %>
              <% counter += 1%>
            </div>
        <% end %>
      </div><!-- Carousel nav -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h4>Around <%=  @ac.location %></h4>
        <p><span class="label label-info"><%= "#{@ac.room_type} around #{@ac.location}"  %></span> </p>

        <%= @ac.description %>
        <p >Price: R <span class="text-success text-bold" ><%= @ac.price.round(2) %></span>p.m</p>
        <!--<span class="likes-count" data-id="<%# @ac.id %>" > <%# @ac.tot_likes %> </span>-->
        <%# link_to [:like, @ac], method: :post, class: 'like', remote: true, form: {'data-type' => "json" }  do %>
            <!--<i class="material-icons my-small-icon" style="color: #ff0722;">favorite</i>-->
        <%# end %>
        <p>Views: <%= @ac.views %></p>
      </div>
      <div class="">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#secure-room">Secure Room</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#view-booking">Book Viewing</button>
      </div>
    </div>

    <!--seller Infomation -->
    <div class="panel panel-default">
      <div class="panel-body">
        <h4 class="text-bold">Seller Info</h4>
        <div class="">
          <%= link_to(check_if_nil(@ac.user.profile_img, '/profile.png', 'user-avatar'), user_path(@ac.user)) %>
        </div>
        <p><%= @ac.user.email %></p>
        <p><%= @ac.user.contacts %></p>
      </div>
    </div>

  </div>
</div>

