
<h2 class="text-center">Accommodation</h2>

<div class="text-center">
  <div class="form-group">
    <%= form_tag search_accommodations_path, :method => :get, id: 'items_search', class: 'form-inline form-search'  do %>
        <br>
        <%# text_field_tag :search, params[:search], placeholder: 'Search eg. wifi ', class: ' form-control'%>
        <div class=" form-con">
          Location: <%= select_tag 'name', options_for_select(locations_array, "Auckland Park"), class: 'form-control' %> &nbsp &nbsp
          Institution: <%= select_tag 'Institutions', options_for_select(@Inst, "UJ"), class: 'form-control' %> &nbsp &nbsp
          Room Type: <%= select_tag 'room_type', options_for_select(['Single','Sharing', 'Apartment', 'Cottage'], "Sharing"), class: 'form-control' %> &nbsp &nbsp <br>
          Price From R: <%= number_field_tag :price_from, params[:price_from],placeholder: "0.0", class: "form-control"%>&nbsp
          Price To R: <%= number_field_tag :price_to, params[:price_to], placeholder: "0.0", class: "form-control"%> &nbsp
          <br>
        </div>
        <%= submit_tag 'Search', name: nil, class: 'btn  btn-lg my-btn', id: 'mySearch' %>
    <% end %>
  </div>
</div>
<div>
    <%= render(partial: 'shared/accommodation', collection: @acs) || "There's no accommodation to be displayed" %>
</div>

<div id="infinity-scroll" style="display: inline-block" ><%= will_paginate @acs %></div>
