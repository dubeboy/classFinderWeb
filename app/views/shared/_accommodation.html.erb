<div class="col-md-3 item" >
  <div class="panel panel-body my_div" style="padding: 0px; overflow: hidden">
    <%= image_tag accommodation.pictures[0].image, class: 'card-img-top' unless accommodation.pictures[0].nil?  %>
    <div class="card-block">
      <h4 class="card-title"> <span class="text-bold text-success"> R <%= accommodation.price.round(2) %></span></h4>

      <!--<span class="likes-count" data-id="<%# accommodation.id %>" > <%# accommodation.tot_likes %> </span>-->
      <%# link_to [:like, accommodation], method: :post, class: 'like', remote: true, form: {'data-type' => "json" }  do %>
      <!--<i class="material-icons my-small-icon" style="color: #ff0722;">favorite</i>-->
      <%# end %>
      <small class="badge badge-success"><%= accommodation.room_type %></small> <br>
      Around <%= accommodation.location  %> <br>
      By <%= accommodation.user.name %> <br>
      <% if accommodation.user == current_user %>
          <div class="pull-right">
            <%= link_to 'Delete', accommodation_path(accommodation),
                        data: {:confirm => 'Are you sure?'}, :method => :delete %>
            <%= link_to 'Edit', edit_accommodation_path(accommodation) %>
          </div>
      <% end %>
    </div>
    <%= button_to 'More Info', accommodation_path(accommodation), class: 'btn my-btn nice', method: :get  %>
    <%# link_to '<button type="button">View Item</button>'.html_safe, accommodation_path(accommodation), class: 'btn btn-info my-button' %>
  </div>
</div>