<div class="col-md-4 col-md-offset-4">
  <h4 class="text-uppercase">Add A New Item</h4>
  <div class="panel ">
    <div class="panel-body">

      <%= form_for @item, html: {multipart: true} do |f| %>

          <p>
            <%=render 'shared/error_msgs', object: f.object %>
          </p>
          <p class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: 'form-control' %>
          </p>

          <p class="form-group">
            <label for="item_category_id">Type Of Item</label> <br />
            <%= f.select :category_id , Category.all.collect {|c| [c.name, c.id] }, { class: 'form-contro' } %>
          </p>

          <p class="form-group">
            <%= f.label :description %><br />
            <%= f.text_area :description, class: 'form-control' %>
          </p>



          <p class="form-g">
            <%= f.label :avatars, "Item Images" %><br />
            <%= file_field_tag "images[]", type: :file, multiple: true %>
          </p>

          <%= f.label :price %>
          <div class="input-group">
            <span class="input-group-addon text-bold">R</span>
            <%= f.number_field :price, min: 0, step: 'any',  class: 'form-control' %>
          </div>
          <hr>
          <%= f.submit "Add New Item", class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
